<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHOEZIE - Shop</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/styles/user/partials/navbar.css">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f4f4;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .price {
            font-weight: bold;
            font-size: 1.2em;
        }

        .form-range {
            width: 100%;
        }

        .fixed-height {
    height: 220px; /* Set your desired height */
    object-fit: cover; /* This maintains the aspect ratio */
    width: 100%; /* Ensure it takes the full width of the card */
}

.card-link {
    text-decoration: none; /* Remove underline from the link */
    color: inherit; /* Use inherited color for text */
}

.card-link:hover {
    text-decoration: none; /* Keep it consistent on hover */
    color: inherit; /* Ensure text color remains the same */
}

    </style>
</head>
<body>

<!-- Navbar -->
<%- include('partials/navbar') %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item"><a href="#">Library</a></li>
      <li class="breadcrumb-item active" aria-current="page">Data</li>
    </ol>
  </nav>
<!-- Filter and Products Section -->
<div class="container mt-4">
    <div class="row">
        <!-- Filter Section -->
        <div class="col-md-3">
            <div class="row mt-3" id="filterOptions">
                <div class="col-12">
                    <h5>Filter by Category</h5>
                    <ul class="list-group">
                        <li class="list-group-item">Men</li>
                        <li class="list-group-item">Women</li>
                        <li class="list-group-item">Kids</li>
                    </ul>
                </div>
                <div class="col-12">
                    <h5>Filter by Price</h5>
                    <input type="range" min="0" max="50000" value="25000" class="form-range" id="priceRange">
                    <div class="d-flex justify-content-between">
                        <span>0</span>
                        <span>50000</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Section -->
        <div class="col-md-9">
            <div class="row">
                <% if(product){%>
            <% product.forEach(product =>{%>
              <% if(product.status){%>
                   <div class="col-md-4 mb-5">
                            <a href="shop/<%= product.id %>" class="card-link">
                            <div class="card">
                                <img src="<%= product.imageUrls[0] %>" class="card-img-top fixed-height" alt="Product 1">
                                <div class="card-body" style="text-align: left;">
                                    <p class="card-title"><%= product.name %></p>
                                    <div class="star-rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                        <span>(4.5)</span>
                                    </div>
                                    <p class="price">â‚¹ <%= product.price %></p>
                                    <div class="button-group">
                                        <a href="shop/<%= product.id %>" class="btn shop-btn btn-white">View Product</a>
                                        <a class="ml-4 mt-1 mr-2"><i class="fa-regular fa-heart" style="color: #000000;"></i></a>
                                    </div>
                                </div>
                            </div>
                            </a>
                        </div>
              <%} %>
            <%}) %>
               <% } %>
               
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
