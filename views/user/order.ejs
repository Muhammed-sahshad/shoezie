<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHOEZIE - My Orders</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="/styles/user/partials/navbar.css">
    <link rel="stylesheet" href="/styles/user/partials/profileSidebar.css">
    
</head>
<body>

<!-- Navbar -->
<%- include('partials/navbar') %>

<!-- User Profile Section -->
<main>
    <div class="container mt-5">
        <div class="row">
            <%- include('partials/profileSidebar')  %>
            <div class="col-md-9 pl-5 mt-4">
                <h5 class="mb-4">My Orders</h5>
                <div class="table-responsive">
                    <% if(order){ %>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Order Date</th>
                                <th>Status</th>
                                <th>Total Price</th>
                                <th>Items</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% order.forEach((order,index) =>{ %>
                                <tr>
                                    <td><%= index+1%></td>
                                    <td><%= order.orderDate.toLocaleDateString() %></td>
                                    <td>
                                        <span class="badge <%= 
                                            order.orderStatus === 'Pending' ? 'badge-warning' :
                                            order.orderStatus === 'Processing' ? 'badge-info' :
                                            order.orderStatus === 'Shipped' ? 'badge-primary' :
                                            order.orderStatus === 'Delivered' ? 'badge-success' :
                                            order.orderStatus === 'Cancelled' ? 'badge-danger' :
                                            '' // fallback class if needed
                                        %>">
                                            <%= order.orderStatus %>
                                        </span>
                                    </td>
                                    <td>â‚¹ <%= order.totalAmount %>.00</td>
                                    <td>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex">
                                                <% order.items.forEach((item, index) => { %>
                                                    <% if (index < 3) { %>
                                                        <img src="<%= item.productId.imageUrls[0] %>" alt="Item <%= index + 1 %>" class="img-thumbnail" style="width: 50px; height: 50px; margin-right: 3px;">
                                                    <% } %>
                                                <% }) %>
                                                
                                                <% if (order.items.length > 3) { %>
                                                    <span class="mt-2 ml-2">+<%= order.items.length -3 %></span>
                                                <% } %>
                                            </div>
                                            <a href="/user/profile/orders/<%= order._id %>" class="btn btn-info  btn-sm ml-2"><i class="fa-regular fa-eye" style="color: #ffffff;"></i> View</a>
                                        </div>
                                    </td>
                                </tr>
                           <% }) %>
                            
                        </tbody>
                    </table>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
