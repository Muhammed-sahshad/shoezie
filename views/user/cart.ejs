<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHOEZIE - Cart</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Fonts: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/styles/user/cart.css">
</head>
<body>

<!-- Navbar -->
<%- include('partials/navbar') %>

<main class="container mt-5">
    <h2 class="text-center">Shopping Cart</h2>
    
    <div class="cart-items">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="/images/product1.jpg" alt="Product 1" class="img-fluid" style="width: 100px; height: auto;">
                            <span class="ml-3">Stylish Sneakers</span>
                        </div>
                    </td>
                    <td>₹ 2,500</td>
                    <td>
                        <input type="number" value="1" min="1" class="form-control quantity-input" data-id="1">
                    </td>
                    <td>₹ 2,500</td>
                    <td>
                        <a href="cart/remove/1" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="/images/product2.jpg" alt="Product 2" class="img-fluid" style="width: 100px; height: auto;">
                            <span class="ml-3">Casual T-Shirt</span>
                        </div>
                    </td>
                    <td>₹ 1,000</td>
                    <td>
                        <input type="number" value="2" min="1" class="form-control quantity-input" data-id="2">
                    </td>
                    <td>₹ 2,000</td>
                    <td>
                        <a href="cart/remove/2" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="/images/product3.jpg" alt="Product 3" class="img-fluid" style="width: 100px; height: auto;">
                            <span class="ml-3">Leather Wallet</span>
                        </div>
                    </td>
                    <td>₹ 1,500</td>
                    <td>
                        <input type="number" value="1" min="1" class="form-control quantity-input" data-id="3">
                    </td>
                    <td>₹ 1,500</td>
                    <td>
                        <a href="cart/remove/3" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="total-price text-right">
            <h4>Total: ₹ 6,000</h4>
        </div>

        <div class="button-group mt-4">
            <a href="shop" class="btn btn-primary">Continue Shopping</a>
            <a href="checkout" class="btn btn-success">Proceed to Checkout</a>
        </div>
    </div>
</main>

<!-- Footer -->
<footer class="footer pt-5">
    <div class="container">
        <div class="footer-content">
            <div class="brand-section">
                <h2>SHOEZIE</h2>
                <p>We have clothes that suit your style and which you’re proud to wear. From women to men.</p>
            </div>
            <!-- Other footer sections can be added here -->
        </div>
        <hr class="footer-divider">
        <div class="copyright">
            <p>&copy; 2024 SHOEZIE. All rights reserved.</p>
        </div>
    </div>
</footer>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    // Optional: Handle quantity change events
    $(document).ready(function() {
        $('.quantity-input').on('change', function() {
            const productId = $(this).data('id');
            const newQuantity = $(this).val();
            // You can send an AJAX request to update the quantity in the cart
            console.log(`Update product ${productId} quantity to ${newQuantity}`);
        });
    });
</script>

</body>
</html>
