<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users - Admin Dashboard - SHOEZIE</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS CDN -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles/admin/usersList.css"> <!-- Point to your custom CSS -->
    <link rel="stylesheet" href="/styles/admin/dashboard.css"> <!-- Point to your custom CSS -->
   
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark sidebar" id="sidebar">
            <div class="text-center mt-4 mb-3">
                <h3 class="text-white">Admin panel</h3>
            </div>
            <ul class="list-unstyled components">
                <li><a href="dashboard">Dashboard</a></li>
                <li><a href="users">Users</a></li>
                <li><a href="products">Products</a></li>
                <li><a href="orderList">Order List</a></li>
                <li><a href="offers">Offers</a></li>
                <li><a href="coupons">Coupons</a></li>
                <li><a href="deals">Deals</a></li>
                <li><a href="category">Category</a></li>
                <li><a href="settings">Settings</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3 rounded-1">
                <!-- New Hamburger Menu Button -->
                <button class="btn btn-light btn-sm" id="menuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <form class="form-inline ml-3">
                    <input class="form-control mr-sm-2 rounded-pill" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-light my-2 my-sm-0 rounded-pill" type="submit">Search</button>
                </form>
                <div class="navbar-brand d-flex align-items-center ml-auto">
                    <!-- Admin Profile Photo -->
                    <img src="path/to/profile-photo.jpg" alt="Admin Profile" class="profile-photo">
                    <span class="navbar-text text-light ml-2">Admin Name</span>
                </div>
            </nav>

            <!-- Content Area -->
            <div class="container-fluid">
                <h2 class="mb-4">Users</h2>
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Example user entry -->
                        <% if(user){ %>
                            <% user.forEach((user, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= user.firstname %> <%= user.lastname %></td>
                                    <td><%= user.email %></td>
                                    <td>
                                        <% if (user.isBlock) { %>
                                            <!-- Show Unblock button if the user is blocked -->
                                            <button class="btn btn-success btn-sm" onclick="toggleUserStatus('<%= user._id %>', 'unblock')">Unblock</button>
                                        <% } else { %>
                                            <!-- Show Block button if the user is not blocked -->
                                            <button class="btn btn-danger btn-sm" onclick="toggleUserStatus('<%= user._id %>', 'block')">Block</button>
                                        <% } %>
                                        </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Block/Unblock Confirmation Modal -->
    <div class="modal fade" id="blockUnblockModal" tabindex="-1" aria-labelledby="blockUnblockModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="blockUnblockModalLabel">Confirm Action</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to <span id="blockUnblockAction"></span> <span id="blockUnblockUserName"></span>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmBlockUnblockButton">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap and jQuery Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Sidebar toggle functionality
        document.getElementById('menuToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('page-content-wrapper').classList.toggle('toggled');
        });

        // Variables to store current action data
        let currentAction = '';
        let currentUserId = '';

        function toggleUserStatus(userId, action) {
            currentAction = action;
            currentUserId = userId;
            document.getElementById('blockUnblockAction').textContent = action;
            document.getElementById('blockUnblockUserName').textContent = userId;
            $('#blockUnblockModal').modal('show');
        }

        // Handle confirm block/unblock button click
        document.getElementById('confirmBlockUnblockButton').addEventListener('click', function() {
            fetch(`/admin/users/${currentUserId}/${currentAction}`, {
                method: 'POST', // or 'PUT' depending on your server setup
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                console.log(`User ${currentUserId} has been ${currentAction}ed.`);
                $('#blockUnblockModal').modal('hide');
                location.reload();
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while processing the request.');
            });
        });

    </script>
</body>
</html>
